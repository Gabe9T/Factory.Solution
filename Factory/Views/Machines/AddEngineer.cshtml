@model Factory.Models.Machine

<div class="content">
    <h2>Add a Engineer</h2>

    <h4>Add a Engineer to : @Model.Name</h4>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.MachineId)

        @Html.Label("Select a Engineer")
        @Html.DropDownList("EngineerId", new SelectList(ViewBag.Engineers, "EngineerId", "Name"))

        <input class="button" type="submit" value="Add" />
    }

    <p>@Html.ActionLink("Back to Machines", "Index")</p>

    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-blue " })
</div>