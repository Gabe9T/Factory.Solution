@model Factory.Models.Machine

<div class="content">
    <h4>Create New Machine</h4>

    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-red", @style = "font-weight: 600;" })

    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        <br />
        @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
        <br />
        @Html.LabelFor(model => model.Specialty)
        <br />
        @Html.TextBoxFor(model => model.Specialty, new { placeholder = "Specialty" })
        <br />
        <input type="submit" value="Add Machine" class="btn btn-green" />
    }
    
    @Html.ActionLink("Show All Machines", "Index", "Machines", null, new { @class = "btn btn-blue" })
</div>