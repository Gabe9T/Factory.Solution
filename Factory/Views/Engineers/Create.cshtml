@model Factory.Models.Engineer

<div class="content">
    <h4>Create New Engineer</h4>

    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-red", @style = "font-weight: 600;" })

    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        <br />
        @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
        <br />
        @Html.LabelFor(model => model.Specialty)
        <br />
        @Html.TextBoxFor(model => model.Specialty, new { placeholder = "Specialty" })
        <br />
        <br />
        <input type="submit" value="Add Engineer" class="btn btn-green" />
    }
    
    @Html.ActionLink("Show All Engineers", "Index", "Engineers", null, new { @class = "btn btn-blue" })
</div>