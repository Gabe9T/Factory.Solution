@model IEnumerable<Factory.Models.Engineer>
@using Factory.Models

<div class="content">
    <h1>Engineers</h1>
    <div class="columns">
        @foreach (Engineer engineer in Model)
        {
            @Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId }, new { @class = "card" })
        }
    </div>
    <div class="button-control">
        @Html.ActionLink("Add New Engineer", "Create", "Engineers", null, new { @class = "btn btn-green" })
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-blue" })
    </div>
</div>